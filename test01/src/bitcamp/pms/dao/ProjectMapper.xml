<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ProjectDao">

  <resultMap type="Project" id="ProjectMap">
    <id     column="PNO"    property="no"/>
    <result column="SDT"    property="startDate"/>
    <result column="EDT"    property="endDate"/>
    <result column="DESCT"  property="description"/>
    <result column="STAT"   property="state"/>
  </resultMap>
  
  <select id="selectList" resultMap="ProjectMap">
    select PNO, TITLE, SDT, EDT, DESCT
    from PROJECTS
  </select>
  
  <select id="selectOne" parameterType="int" resultMap="ProjectMap">
    select PNO, TITLE, SDT, EDT, DESCT
    from PROJECTS 
    where PNO=#{no}
  </select>
  
  <insert id="insert" parameterType="Project">
    insert into 
      PROJECTS(TITLE,SDT,EDT,DESCT) 
      values(#{title},#{startDate},#{endDate},#{description});
  </insert>
  
  <update id="update" parameterType="Project">
    update PROJECTS set
      TITLE=#{title},
      SDT=#{startDate},
      EDT=#{endDate},
      DESCT=#{description}
    where PNO=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from PROJECTS
    where PNO=#{no}
  </delete>
  
</mapper>